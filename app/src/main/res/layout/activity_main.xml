<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/welcome_page_bg"
    >

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Europapa Tour 2025"
        android:textSize="55sp"
        android:textColor="@color/white"
        android:fontFamily="@font/chopin_script"
        android:layout_marginStart="45dp"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="580dp"/>

    <TextView
        android:id="@+id/welcomeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start booking your tickets now! Now! Now! Donâ€™t miss out on the greatest party in the world!!!"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/accanthis_font"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:layout_marginTop="600dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/welcomeText"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/welcomeBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="START"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"

        android:background="@drawable/button_stroke"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeInfo"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"

        app:layout_constraintTop_toBottomOf="@id/welcomeBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>