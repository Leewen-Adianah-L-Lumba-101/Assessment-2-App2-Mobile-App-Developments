<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPageActivity"
    android:background="@drawable/register_page_bg">

    <TextView
        android:id="@+id/registerText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="60sp"
        android:textColor="@color/white"
        android:fontFamily="@font/chopin_script"

        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="570dp"/>

    <TextView
        android:id="@+id/registerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="But first, enter your details plz :)"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/accanthis_font"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:layout_marginTop="5dp"
        android:textAlignment="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerText"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"

        android:background="@drawable/button_stroke"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerTable"
        />

    <LinearLayout
        android:id="@+id/registerTable"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:padding="10dp"

        app:layout_constraintTop_toBottomOf="@id/registerInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_sans"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white_grey"
            android:hint="123@gmail.com"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_sans"
            android:textStyle="bold"
            android:paddingTop="10dp"/>

        <EditText
            android:id="@+id/userUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:textColorHint="@color/white_grey"
            android:hint="manilovefryslan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_sans"
            android:textStyle="bold"
            android:paddingTop="10dp"
            />

        <EditText
            android:id="@+id/userPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white_grey"
            android:hint="SuperSecretpassword2091*@"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_sans"
            android:textStyle="bold"
            android:paddingTop="10dp"/>
1
        <EditText
            android:id="@+id/userCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white_grey"
            android:hint="Gouda"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/resultsLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="."
        android:gravity="center"
        android:textColor="#E91E63"
        android:visibility="invisible"
        android:fontFamily="@font/nunito_sans"
        app:layout_constraintTop_toBottomOf="@id/registerTable"
        />

</androidx.constraintlayout.widget.ConstraintLayout>